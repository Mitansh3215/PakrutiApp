@model IEnumerable<PakrutiApp.Models.Question>
@{
    ViewData["Title"] = "Prakriti Analysis Quiz";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">🌿 Prakriti Analysis Quiz</h2>

        <form method="post" asp-action="Quiz">
            @foreach (var q in Model)
            {
                <div class="mb-4">
                    <h5>@q.Id. @q.Text</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="answers[@q.Id]" value="Vata" required>
                        <label class="form-check-label">@q.OptionVata</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="answers[@q.Id]" value="Pitta">
                        <label class="form-check-label">@q.OptionPitta</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="answers[@q.Id]" value="Kapha">
                        <label class="form-check-label">@q.OptionKapha</label>
                    </div>
                </div>
            }

            <button type="submit" class="btn btn-success w-100">Get My Result</button>
        </form>
    </div>
</div>
